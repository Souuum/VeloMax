<Window x:Class="VeloMax.BikePartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeloMax"
        xmlns:viewModel="clr-namespace:VeloMax.MVVM.ViewModel"
        xmlns:view="clr-namespace:VeloMax.MVVM.View"
        mc:Ignorable="d"
        Title="BikePartWindow" Height="800" Width="1200"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:BikePartsViewModel/>
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                        Executed="CloseCommandHandler"/>
    </Window.CommandBindings>

    <Border Background="#C9CBFF"
            CornerRadius="20"
            MouseDown="Border_MouseDown">

        <StackPanel>
            <TextBlock Text="Pièces"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   FontSize="24"
                   Margin="25,0,0,20"/>
            <Button     
            Command="ApplicationCommands.Close" 
            Background="#FFE26464" 
            BorderThickness="0"
            RenderTransformOrigin="1,0"
            Width="20"
            Height="20"
                Margin="1150,-60,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="50"/>
                    </Style>
                </Button.Resources>
            </Button>

            <RadioButton Margin="-320,-46,338,44"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="22"
                     Style="{StaticResource HomeViewButtonTheme}"
                     Command="{Binding PartViewRefresh}">

            </RadioButton>
            <Button Style="{StaticResource GlobalButtonTheme}"
                Command="{Binding PartDelete}"
                                Content="Supprimer la ligne"
                                Width="154" Height="30"
                Margin="240,0,0,-150"
                                >

            </Button>
            <StackPanel
                Orientation="Horizontal">
                <Border Height="110"
                Width="242"
                HorizontalAlignment="Left">

                    <TextBlock
                Text="Liste de la commande"
                Foreground="White"
                FontSize="24"></TextBlock>
                </Border>

                <Border Height="110"
                Width="80"
                HorizontalAlignment="Left">

                    <TextBlock
                Text="{Binding RBikeName}"
                Foreground="White"
                FontSize="24"></TextBlock>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Border Width="521"
                    Height="600"
                    Margin="30,0,0,0"
                    CornerRadius="10">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled">

                        <DataGrid x:Name="BikesGrid"
                              IsReadOnly= "True"
                              ItemsSource=""
                              Background="Transparent"
                              BorderThickness="0"
                              SelectedItem="">
                        </DataGrid>
                    </ScrollViewer>
                </Border>
                <Border Width="280"
                    Height="510"
                    Margin="30,-90,0,0"
                    CornerRadius="10"
                    Background="white">
                    <StackPanel>
              
                    </StackPanel>

                </Border>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
